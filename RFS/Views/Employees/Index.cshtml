@model IEnumerable<RFS.Core.Security.IdentityUser>

@{
    ViewBag.Title = "Employees";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Employees
            <small>Show Employees Data</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Data Table With Full Features</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>

                                    <th class="visible-md">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NationalID)
                                    </th>
                                    <th class="visible-lg">
                                        @Html.DisplayNameFor(model => model.Mobile)
                                    </th>
                                    <th class="visible-md">
                                        @Html.DisplayNameFor(model => model.CompanyName)
                                    </th>
                                    @*<th>
                                            @Html.DisplayNameFor(model => model.LanguagePreferred)
                                        </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsActive)
                                    </th>
                                    <th class="visible-lg">
                                        @Html.DisplayNameFor(model => model.UserType)
                                    </th>

                                    <th class="visible-lg">
                                        @Html.DisplayNameFor(model => model.CreatedAt)
                                    </th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td class="visible-md">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NationalID)
                                        </td>
                                        <td class="visible-lg">
                                            @Html.DisplayFor(modelItem => item.Mobile)
                                        </td>
                                        <td class="visible-md">
                                            @Html.DisplayFor(modelItem => item.CompanyName)
                                        </td>
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.LanguagePreferred)
                                            </td>*@

                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <span data-toggle="tooltip" title="" class="badge bg-green" data-original-title="Active">Y</span>
                                            }
                                            else
                                            {
                                                <span data-toggle="tooltip" title="" class="badge bg-red" data-original-title="Not Active">N</span>
                                            }
                                        </td>
                                        <td class="visible-lg">
                                            @Html.DisplayFor(modelItem => item.UserType)
                                        </td>

                                        <td class="visible-lg">
                                            @Html.DisplayFor(modelItem => item.CreatedAt)
                                        </td>
                                        <td>
                                            <div class="tools">
                                                @Html.ActionLink(" ", "Edit", "Employees", new { id = item.Id },  new { @class = "fa fa-edit text-info fa-lg", @title ="Edit", @data_toggle = "tooltip" })
                                                @Html.ActionLink(" ", "Delete", "Employees", new { id = item.Id }, new { @class = "fa fa-trash-o text-danger fa-lg", @title = "Delete", @data_toggle = "tooltip" })

                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>

                                    <th class="visible-md">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NationalID)
                                    </th>
                                    <th class="visible-lg">
                                        @Html.DisplayNameFor(model => model.Mobile)
                                    </th>
                                    <th class="visible-md">
                                        @Html.DisplayNameFor(model => model.CompanyName)
                                    </th>
                                    @*<th>
                                            @Html.DisplayNameFor(model => model.LanguagePreferred)
                                        </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsActive)
                                    </th>
                                    <th class="visible-lg">
                                        @Html.DisplayNameFor(model => model.UserType)
                                    </th>

                                    <th class="visible-lg">
                                        @Html.DisplayNameFor(model => model.CreatedAt)
                                    </th>
                                    <th >Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
