@*@model IEnumerable<RFS.Application.Dto.UserDto>*@
@using RFS.Application.Dto;
@using PagedList.Mvc;
@model PagedList.IPagedList<UserDto>

@{
    ViewBag.Title = "Employees";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Employees
            <small>Show Employees Data</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Users</a></li>
            <li class="active">Employees</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box border-danger">
                    <div class="box-header">
                        <div class="=row">
                            <div class="col-sm-10">
                                <h3 class="box-title">Employees Data</h3>
                            </div>
                            <div class="col-sm-2">
                                <a class="btn btn-primary pull-right" href="/Employees/Create"><i class="fa fa-plus"></i>   Create new employee</a>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    @using (Html.BeginForm("Index", "Employees", FormMethod.Get))
                    {
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>

                                        <th>
                                            @*@Html.DisplayNameFor(model => model.Email)*@
                                            Email
                                        </th>

                                        <th class="visible-md">
                                            @*@Html.DisplayNameFor(model => model.Name)*@
                                            Name
                                        </th>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.NationalID)*@
                                            National ID
                                        </th>
                                        <th class="visible-lg">
                                            @*@Html.DisplayNameFor(model => model.Mobile)*@
                                            Mobile
                                        </th>
                                        <th class="visible-md">
                                            @*@Html.DisplayNameFor(model => model.CompanyName)*@
                                            Company Name
                                        </th>
                                        @*<th>
                                                @Html.DisplayNameFor(model => model.LanguagePreferred)
                                            </th>*@
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.IsActive)*@
                                            Active
                                        </th>
                                        <th class="visible-lg">
                                            @*@Html.DisplayNameFor(model => model.UserType)*@
                                            User Type
                                        </th>

                                        <th class="visible-lg">
                                            @*@Html.DisplayNameFor(model => model.CreatedAt)*@
                                            Created At
                                        </th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                <a href="/Employees/Details/@item.Id">
                                                    <i class="fa fa-"></i>
                                                    @Html.DisplayFor(modelItem => item.Email)
                                                </a>
                                            </td>
                                            <td class="visible-md">
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NationalID)
                                            </td>
                                            <td class="visible-lg">
                                                @Html.DisplayFor(modelItem => item.Mobile)
                                            </td>
                                            <td class="visible-md">
                                                @Html.DisplayFor(modelItem => item.CompanyName)
                                            </td>
                                            @*<td>
                                                    @Html.DisplayFor(modelItem => item.LanguagePreferred)
                                                </td>*@

                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span data-toggle="tooltip" title="" class="badge bg-green green-tooltip" data-original-title="Active" data-placement="left">Y</span>
                                                }
                                                else
                                                {
                                                    <span data-toggle="tooltip" title="" class="badge bg-red red-tooltip" data-original-title="Not Active" data-placement="left">N</span>
                                                }
                                            </td>
                                            <td class="visible-lg">
                                                @Html.DisplayFor(modelItem => item.UserType)
                                            </td>

                                            <td class="visible-lg">
                                                @Html.DisplayFor(modelItem => item.CreatedAt)
                                            </td>
                                            <td>
                                                <div class="tools">
                                                    @Html.ActionLink(" ", "Edit", "Employees", new { id = item.Id }, new { @class = "fa fa-edit text-info fa-lg blue-tooltip", @title = "Edit", @data_toggle = "tooltip", @data_placement = "left" })
                                                    @Html.ActionLink(" ", "Delete", "Employees", new { id = item.Id }, new { @class = "fa fa-trash-o text-danger fa-lg red-tooltip", @title = "Delete", @data_toggle = "tooltip", @data_placement = "right" })

                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.Email)*@
                                        </th>

                                        <th class="visible-md">
                                            @*@Html.DisplayNameFor(model => model.Name)*@
                                        </th>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.NationalID)*@
                                        </th>
                                        <th class="visible-lg">
                                            @*@Html.DisplayNameFor(model => model.Mobile)*@
                                        </th>
                                        <th class="visible-md">
                                            @*@Html.DisplayNameFor(model => model.CompanyName)*@
                                        </th>
                                        @*<th>
                                                @Html.DisplayNameFor(model => model.LanguagePreferred)
                                            </th>*@
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.IsActive)*@
                                        </th>
                                        <th class="visible-lg">
                                            @*@Html.DisplayNameFor(model => model.UserType)*@
                                        </th>

                                        <th class="visible-lg">
                                            @*@Html.DisplayNameFor(model => model.CreatedAt)*@
                                        </th>
                                        <th>Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                            <div class="row">
                                <div class="col-sm-3">Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of  @Model.PageCount</div>
                                <div class="col-sm-9">
                                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                                </div>
                            </div>
                        </div>
                    }

                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
