@model RFS.Application.Dto.UserDto

@section styles{
    @Styles.Render("~/bundles/icheck")
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Employees
            <small>.</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Users</a></li>
            <li class="active">Create</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-sm-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Edit Employee</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("Update","Employees",FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(m => m.Id)
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="Name">Name</label>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Enter Name" })
                                    @*<input type="text" class="validate form-control" id="Name" placeholder="Enter Name">*@
                                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="NationalID">Saudi ID / Iqama Number</label>
                                    @*<input type="text" class="form-control" id="NationalID" placeholder="National ID">*@
                                    @Html.TextBoxFor(m => m.NationalID, new { @class = "form-control", @placeholder = "Enter National ID" })
                                    @Html.ValidationMessageFor(m => m.NationalID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="Email">Email address</label>
                                    @*<input type="email" class="form-control" id="Email" placeholder="Enter Email">*@
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter Email" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="Mobile">Mobile</label>
                                    @*<input type="text" class="form-control" id="Mobile" placeholder="Enter Mobile Number">*@
                                    @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @placeholder = "Enter Mobile" })
                                    @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="Title">Title</label>
                                    @*<input type="text" class="form-control" id="Title" placeholder="Enter Title">*@
                                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @placeholder = "Enter Title" })
                                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="CompanyName">Company Name</label>
                                    @*<input type="text" class="form-control" id="CompanyName" placeholder="Enter Company Name">*@
                                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", @placeholder = "Enter Company Name" })
                                    @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="checkbox icheck">
                                    <label>
                                        @*<input type="checkbox" id="IsActive"> Is Active*@
                                        @Html.CheckBoxFor(m => m.IsActive) Is Active
                                    </label>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i>   Update</button>
                            <a class="btn btn-danger pull-right" href="/Employees/Index"><i class="fa fa-reply"></i>   Back </a>
                        </div>


                    }
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@*Icheck code*@

@section scripts{
    @Scripts.Render("~/bundles/icheck.js")
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
}
